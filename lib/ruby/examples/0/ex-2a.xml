<?xml version="1.0" encoding="UTF-8"?>
<!--

  YADS - OpenURL Example 2a (see ex-2.xml for example case)

  ==

  a) Unencoded OpenURL (ignore whitespace):
  
  http://openurl.org/resolver?
    & ref_id = local:ASIN-1861004516
    & req_id = local:104-0011434-4639158
    & rfr_id = local:booksales
    & srv_id = local:addToCart 

-->
<yads>
<nest>
<!-- OpenURL Resolver + Query -->
<resource>http://openurl.org/resolver?</resource>
<collection>
<item>
<!-- Referent -->
<data>local:ASIN-1861004516</data>
<property type="type">ref_id</property>
</item>
<item>
<!-- Requester -->
<data>local:104-0011434-4639158</data>
<property type="type">req_id</property>
</item>
<item>
<!-- Referer -->
<data>local:booksales</data>
<property type="type">rfr_id</property>
</item>
<item>
<!-- Service-Type -->
<data>local:addtoCart</data>
<property type="type">srv_id</property>
</item>
</collection>
<property type="type">OpenURL</property>
</nest>
</yads>
